resource "aws_lb" "tableau_alb" {
  name               = "tableau-public-alb"
  internal           = false                         # Set to false to make it publicly accessible
  load_balancer_type = "application"
  subnets            = var.public_subnet_ids         # List of public subnets for ALB
  security_groups    = [aws_security_group.alb_sg.id]

  tags = {
    Name = "tableau-public-alb"
  }
}

resource "aws_lb_target_group" "tableau_tg" {
  name     = "tableau-tg"
  port     = 80                                      # Tableau Server is running on port 80
  protocol = "HTTP"
  vpc_id   = var.vpc_id

  health_check {
    path                = "/"
    protocol            = "HTTP"
    interval            = 30
    timeout             = 5
    healthy_threshold   = 2
    unhealthy_threshold = 2
    matcher             = "200"
  }

  tags = {
    Name = "tableau-tg"
  }
}

resource "aws_lb_listener" "http" {
  load_balancer_arn = aws_lb.tableau_alb.arn
  port              = 80
  protocol          = "HTTP"

  default_action {
    type             = "forward"
    target_group_arn = aws_lb_target_group.tableau_tg.arn
  }
}

resource "aws_lb_target_group_attachment" "tableau_instance" {
  target_group_arn = aws_lb_target_group.tableau_tg.arn
  target_id        = aws_instance.tableau.id          # Attach the EC2 instance to the target group
  port             = 80
}

resource "aws_security_group" "alb_sg" {
  name        = "tableau-alb-sg"
  description = "Allow HTTP traffic to ALB"
  vpc_id      = var.vpc_id

  ingress {
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]                       # Allow HTTP traffic from anywhere
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]                       # Allow all outbound traffic
  }

  tags = {
    Name = "tableau-alb-sg"
  }
}
